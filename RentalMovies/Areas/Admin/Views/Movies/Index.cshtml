@model IEnumerable<RentalMovies.Data.Movies>

@{ ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="main-page">
        @*     @Html.Partial("MessageAlert")*@

        <p>
            @Html.ActionLink("Add New Movie", "AddNewMovie", "Movies", new { area = "Admin" }, new { @class = "btn btn-primary" })
        </p>
        <div class="sign-up-row widget-shadow">
            @if (!Model.Any())
            {
<p>No movies to rent</p> }
else
{
<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mov in Model)
        {
<tr>

    <td>@Html.ActionLink(mov.Name, "Details", "Movies", new { area = "Admin" }, new { movieId = mov.movieId })</td>
    <td>@mov.Genre.Name</td>
    <td>
        @Html.ActionLink("Edit", "EditMov", "Movies", new { area = "Admin" }, new { movieId = mov.movieId }) ||
        @Html.ActionLink("Delete", "Delete", "Movies", new { area = "Admin" }, new { movieId = mov.movieId })
    </td>
</tr>}

    </tbody>
</table>}

        </div>
    </div>
</div>